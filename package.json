{
  "name": "relint",
  "version": "0.0.0",
  "description": "Detect grammar mistakes, write better, get suggestions, and fix English",
  "author": "Titus Wormer <tituswormer@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/wooorm/relint.git"
  },
  "bin": {
    "relint": "bin/relint"
  },
  "dependencies": {
    "retext": "^0.1.1",
    "retext-ast": "^0.1.1",
    "retext-content": "^0.2.1",
    "retext-pos": "^0.1.2",
    "retext-range": "^0.1.0",
    "retext-visit": "^0.1.1"
  },
  "devDependencies": {
    "eslint": "^0.8.0",
    "istanbul": "^0.3.0",
    "jscs": "^1.6.0",
    "mocha": "^1.21.0"
  },
  "scripts": {
    "test": "node_modules/.bin/_mocha --reporter spec -u exports test",
    "test-travis": "node_modules/.bin/istanbul cover node_modules/.bin/_mocha -- --reporter spec test",
    "lint-api": "node_modules/.bin/eslint index.js lib",
    "lint-test": "node_modules/.bin/eslint --env mocha test",
    "lint-style": "node_modules/.bin/jscs index.js lib test --reporter=inline",
    "lint": "npm run lint-api\nnpm run lint-style\nnpm run lint-test",
    "coverage": "node_modules/.bin/istanbul cover node_modules/.bin/_mocha -- -- test",
    "make": "npm run lint\nnpm run coverage"
  }
}
